<li class="post">
  <span class="title">
    <%= link_to(user_posts_path(user_id: user.id, post: post.id)) do %>
      <%= post.title %>
    <% end %>
  </span>
  <p>
    <%= post.text %>
  </p>
  <div class="post-details">
    <span>
      Comments: <%= post.comments_counter %>
    </span>
    <span>
      Likes: <%= post.likes_counter %>
    </span>
  </div>
</li>