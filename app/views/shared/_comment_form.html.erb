<section class="comment-form">
  <span class="current-user">
    Comment as 
    <%= link_to(user_path(id: current_user.id)) do %>
      <%= current_user.name %>
    <% end %>
  </span>
  <%= form_with model: @comment, method: :post do |form| %>
    <%= form.text_area :text, placeholder: "Leave a comment", rows: 4 %>
    <%= form.submit "Post comment", class: "button" %>
  <% end %>
</section>